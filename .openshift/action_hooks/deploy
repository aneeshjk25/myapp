#!/bin/bash

pushd ${OPENSHIFT_REPO_DIR}
echo "precompiling assets"
RAILS_ENV=production bundle exec rake assets:precompile
echo "Running migrations"
bundle exec rake db:migrate RAILS_ENV="production"

if [ -d "log/rake" ]
then
        echo "Rake log directory exists"
else
        echo "! Rake log directory does not exists"
        echo "Creating directory"
        mkdir log/rake
fi
echo "Starting Import scripts"
echo "Running daily quotes import"
bundle exec rake import:quotes RAILS_ENV="production"
popd 
